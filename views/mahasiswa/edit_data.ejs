<div id="edit-modal" class="h-screen w-full fixed left-0 top-0 edit modal flex justify-center items-center p-3 modal-body bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded shadow-lg w-1/3">
        <div class="border-b px-4 py-2 flex justify-between">
            <h3 class="font-semibold text-lg">Edit Data</h3>
            <button class="text-black close-modal">&cross;</button>
        </div>
    <form action="/mahasiswa/update?_method=PUT" method="POST" class="m-3">
        <div class="mb-3 xl:w-96">
            <label for="" class="form-label inline-block mb-2 text-gray-700">Nama: </label>
            <input type="text" name="nama" class="nama block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none form-control">
        </div>
        <div class="mb-3 xl:w-96">
            <label for="" class="form-label inline-block mb-2 text-gray-700">E-mail: </label>
            <input type="text" name="email" class="email block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none form-control">
        </div>
        <div class="mb-3 xl:w-96">
            <label for="" class="form-label inline-block mb-2 text-gray-700">Jurusan: </label>
            <input type="text" name="jurusan" class="jurusan block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none form-control">
        </div>
        <div class="flex justify-end items-center w-100 border-t p-3">
          <input type="hidden" name="id" class="id">
          <button type="button" class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded text-white mr-1 close-modal">Cancel</button>
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-white ">Edit</button>
        </div>
    </div>
    </form>
  </div>

<script>
    const tombol = document.querySelector('.modal');

        const showModal = document.querySelector('.show-modal');
        const closeModal = document.querySelectorAll('.close-modal');

        showModal.addEventListener('click', function(){
            tombol.classList.remove('hidden')
        });

        closeModal.forEach(close => {
            close.addEventListener('click', function(){
                tombol.classList.add('hidden')
            });
        });
</script>